{
  "name": "record-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "build:ci": "cross-env REACT_APP_CI=1 react-scripts build",
    "coverage": "cross-env NODE_ICU_DATA=node_modules/full-icu react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" && stylelint \"./src/**/*.{css,pcss,scss}\" && echo \"lint success\"",
    "lint:fix": "eslint --fix \"./src/**/*.{ts,tsx}\" && stylelint --fix \"./src/**/*.{css,pcss,scss}\" && echo \"lint success\"",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "plop": "plop"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,md}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{json}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{css,pcss,scss}": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/ui/icons/**/*.{{js,jsx,ts,tsx}}",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ]
  },
  "dependencies": {
    "@material-ui/core": "4.11.2",
    "@material-ui/icons": "4.11.2",
    "@sentry/browser": "5.28.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "@types/jest": "^26.0.16",
    "@types/node": "^12.19.8",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "react": "^17.0.1",
    "react-device-detect": "1.14.0",
    "react-dom": "^17.0.1",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "react-script": "2.0.5",
    "react-scripts": "4.0.1",
    "typescript": "^4.1.2",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@types/testing-library__jest-dom": "5.9.2",
    "@welldone-software/why-did-you-render": "4.3.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest-dom": "3.1.7",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-testing-library": "3.7.0",
    "full-icu": "1.3.1",
    "husky": "4.2.5",
    "inquirer-directory": "2.2.0",
    "lint-staged": "10.2.13",
    "plop": "2.7.4",
    "prettier": "2.1.1",
    "stylelint": "13.6.1",
    "stylelint-config-recommended": "3.0.0"
  }
}
